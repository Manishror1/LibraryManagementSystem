<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- BOOK IMAGE -->
        <ImageView
            android:id="@+id/imgPendingBook"
            android:layout_width="85dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_placeholder"
            android:layout_marginEnd="14dp" />

        <!-- TEXT AREA -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPendingTitle"
                android:textSize="18sp"
                android:textColor="#1E293B"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPendingStudent"
                android:text="Student:"
                android:textSize="14sp"
                android:textColor="#475569"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPendingEmail"
                android:text="Email:"
                android:textSize="14sp"
                android:textColor="#475569"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPendingBorrowDate"
                android:text="Borrow:"
                android:textSize="14sp"
                android:textColor="#475569"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPendingDueDate"
                android:text="Due:"
                android:textSize="14sp"
                android:textColor="#DC2626"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- BUTTONS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnApproveBook"
                    android:text="Approve"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_success"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnFineBook"
                    android:text="Add Fine"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_danger"
                    android:textColor="#FFFFFF"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
