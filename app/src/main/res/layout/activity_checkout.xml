<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="28dp"
    android:gravity="center_horizontal"
    android:background="#F8FAFC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvCheckoutTitle"
        android:text="Checkout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvCheckoutDesc"
        android:text="Confirm payment?"
        android:textSize="16sp"
        android:textColor="#475569"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Amount -->
    <TextView
        android:id="@+id/tvCheckoutAmount"
        android:text="$0"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#16A34A"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Note -->
    <TextView
        android:id="@+id/tvCheckoutNote"
        android:text="This is a simulated in-app payment (no real charges occur)."
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Confirm button -->
    <Button
        android:id="@+id/btnCheckoutConfirm"
        android:text="Confirm Payment"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_primary"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Cancel -->
    <Button
        android:id="@+id/btnCheckoutCancel"
        android:text="Cancel"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_danger"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
