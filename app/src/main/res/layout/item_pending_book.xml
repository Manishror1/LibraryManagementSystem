<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Book Image -->
    <ImageView
        android:id="@+id/imgPendingBook"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="#DDDDDD"
        android:layout_marginEnd="12dp" />

    <!-- TEXT SECTION -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPendingTitle"
            android:text="Book Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPendingAuthor"
            android:text="Author: "
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPendingStudent"
            android:text="Student: "
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPendingEmail"
            android:text="Email: "
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPendingBorrowDate"
            android:text="Borrowed: "
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPendingDueDate"
            android:text="Due: "
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- BUTTONS -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnApproveBook"
                android:text="Approve Return"
                android:textAllCaps="false"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnFineBook"
                android:text="Add Fine"
                android:textAllCaps="false"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
